<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context="com.example.android.matematikakviz.MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="360dp"
        android:layout_height="302dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp">


    </GridLayout>


    <Button
        android:id="@+id/button1"
        android:layout_width="180dp"
        android:layout_height="151dp"
        android:layout_alignStart="@id/gridLayout"
        android:layout_alignTop="@id/gridLayout"
        android:background="#b500ddff"
        android:gravity="center"
        android:onClick="gumb1"
        android:text=""
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="40sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="151dp"
        android:layout_alignTop="@id/gridLayout"
        android:layout_toEndOf="@id/button1"
        android:background="#b465ff3f"
        android:onClick="gumb2"
        android:text=""
        android:textSize="40sp"
        tools:background="@android:color/holo_purple" />

    <Button
        android:id="@+id/button3"
        android:layout_width="180dp"
        android:layout_height="151dp"
        android:layout_alignStart="@id/gridLayout"
        android:layout_below="@id/button1"
        android:background="#6839a8cd"
        android:onClick="gumb3"
        android:text=""
        android:textSize="40sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="180dp"
        android:layout_height="151dp"
        android:layout_below="@id/button2"
        android:layout_toEndOf="@id/button3"
        android:background="#717bdd1a"
        android:onClick="gumb4"
        android:text=""
        android:textSize="40sp" />

    <Button
        android:id="@+id/tajmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@id/gridLayout"
        android:layout_marginStart="22dp"
        android:layout_marginTop="18dp"
        android:background="#aeff8800"
        android:onClick="reset"
        android:text="30s"
        android:textSize="25sp" />

    <Button
        android:id="@+id/kreni"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="360dp"
        android:layout_height="303dp"
        android:layout_alignStart="@+id/gridLayout"
        android:layout_alignTop="@+id/gridLayout"
        android:background="#b999cc00"
        android:elevation="11dp"

        android:onClick="kreni"
        android:text="Kreni"
        android:textColor="#ed8b0505"
        android:textSize="39sp"
        android:textStyle="bold|italic"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/gridLayout"
        android:layout_alignParentTop="true"
        android:background="#ccff8800"
        android:text="0/0"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tajmer"
        android:layout_alignBottom="@id/tajmer"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@id/tajmer"
        android:background="#ab98cb01"
        android:text="Pritisni KRENI"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        tools:textStyle="bold" />


</RelativeLayout>
